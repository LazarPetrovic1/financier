{
  "name": "financier",
  "version": "1.0.2",
  "private": true,
  "author": "LazarPetrovic1",
  "description": "Your best financial friend",
  "homepage": "./",
  "main": "main.js",
  "dependencies": {
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.2.0",
    "@testing-library/user-event": "^13.5.0",
    "electron-router-dom": "^2.1.0",
    "minimist": "^1.2.8",
    "plotly.js": "^3.0.1",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-plotly.js": "^2.6.0",
    "react-router-dom": "^7.4.0",
    "react-scripts": "5.0.1",
    "semver": "^7.7.1",
    "web-vitals": "^2.1.4"
  },
  "devDependencies": {
    "concurrently": "^9.1.2",
    "cross-env": "^7.0.3",
    "electron": "^35.1.1",
    "electron-builder": "^26.0.12",
    "electron-debug": "^4.1.0",
    "serve": "^14.2.4",
    "wait-on": "^8.0.3"
  },
  "scripts": {
    "start": "concurrently \"cross-env BROWSER=none npm run start:react\" \"wait-on http://127.0.0.1:3000 && cross-env NODE_ENV=development electron .\"",
    "start:react": "react-scripts start",
    "build": "react-scripts build",
    "package": "cross-env INLINE_RUNTIME_CHUNK=false NODE_ENV=production electron-builder",
    "serve": "serve -s build",
    "patch": "node update-version.js --type patch",
    "major": "node update-version.js --type major",
    "minor": "node update-version.js --type minor",
    "prod": "npm run build && npm run package"
  },
  "build": {
    "appId": "com.example.my-electron-app",
    "extends": null,
    "productName": "MoneyTracker - Financier",
    "directories": {
      "output": "dist"
    },
    "files": [
      "build/**/*",
      "main.js",
      "package.json",
      "icon.png",
      ".env"
    ],
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}